{
  "aoc-custom/components/common/quick-search": "<div class=\"container\" style=\"padding:0;\">\n    {{{ snippet \"forms_search\"}}}\n  <form class=\"form\" action=\"{{urls.search}}\">\n      <fieldset class=\"form-fieldset\">\n          <div class=\"form-field\">\n              <label class=\"is-srOnly\" for=\"search_query\">{{lang \"search.quick_search.input_label\"}}</label>\n              <div class=\"form-prefixPostfix\">\n                \n                  <input class=\"form-input quick--search\" data-search-quick name=\"search_query\" data-error-message=\"{{lang 'search.error.empty_field'}}\" placeholder=\"Looking for?\" autocomplete=\"off\">\n                  <button class=\"button button--primary form-prefixPostfix-button--postfix\" type=\"image\">Search</button>\n\n              </div>\n          </div>\n      </fieldset>\n  </form>\n  <section class=\"quickSearchResults search_popup\" data-bind=\"html: results\"></section>\n</div>\n<script type=\"text/javascript\">\n   function close_popup(){\n\t\t  $('.quickSearchResults.search_popup').hide(); \n   }\n   $(document).ready(function () {\n   $(\".quick--search\").focus(function(){\n\t\t  $('.quickSearchResults.search_popup').show(); \n\t\t});\n\t});\n</script>\n"
